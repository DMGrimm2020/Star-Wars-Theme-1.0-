<Defs>

    <!-- Single Beds -->
    <ThingDef ParentName="BedWithQualityBase">
        <defName>TGRazzBlueBed</defName>
        <label>Blue Bed</label>
        <description>?</description>
        <graphicData>
            <texPath>Things/Building/Furniture/Bed/BlueBed/TGRazzBlueBed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(2,2)</drawSize>
            <damageData>
                <rect>(0,0.05,1,1.95)</rect>
            </damageData>
        </graphicData>
        <comps>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>EndTable</li>
                    <li>Dresser</li>
                </linkableFacilities>
            </li>
        </comps>
        <statBases>
            <MaxHitPoints>140</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Beauty>1</Beauty>
            <WorkToBuild>850</WorkToBuild>
            <Mass>50</Mass>
            <BedRestEffectiveness>1</BedRestEffectiveness>
            <Comfort>0.75</Comfort>
            <ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
		    <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
        </statBases>
        <size>(1,2)</size>
        <costStuffCount>20</costStuffCount>
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <costList>
            <Cloth>25</Cloth>
        </costList>    
        <building>
            <bed_showSleeperBody>False</bed_showSleeperBody>
            <bed_healPerDay>3</bed_healPerDay>
        </building>
        <fillPercent>0.4</fillPercent>
        <pathCost>60</pathCost>
        <staticSunShadowHeight>0.17</staticSunShadowHeight>
        <castEdgeShadows>True</castEdgeShadows>
        <designationHotKey>Misc2</designationHotKey>
        <techLevel>Medieval</techLevel>
        <researchPrerequisites>
            <li>ComplexFurniture</li>
        </researchPrerequisites>
        <uiIconScale>0.90</uiIconScale>
    </ThingDef>

