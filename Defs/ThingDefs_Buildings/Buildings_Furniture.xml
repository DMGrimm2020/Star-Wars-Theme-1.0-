    <!-- Chair -->
    <ThingDef ParentName="ArtableFurnitureBase">
        <defName>TGStoneChair</defName>
        <label>Stone Chair</label>
        <description>Can be used at tables, work stations, and elsewhere.</description>
        <graphicData>
            <texPath>Things/Building/Furniture/Chair/StoneChair/TGStoneChair</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(1,1)</drawSize>
            <damageData>
                <rectN>(0.25,0.234375,0.5,0.28125)</rectN>
                <rectS>(0.25,0.234375,0.5,0.28125)</rectS>
                <rectE>(0.28125,0.25,0.453125,0.25)</rectE>
                <rectW>(0.28125,0.25,0.453125,0.25)</rectW>
